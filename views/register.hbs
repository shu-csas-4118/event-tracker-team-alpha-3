<h1>{{title}}</h1>
<span id="welcome-text">Welcome to the Event Tracker System</span>
<br/>
<div id="register-form">
    <form action="http://localhost:8081/controllers/account/register" method="post">
        <div>
            <label class="label" for="mail">E-mail</label>
            <input type="email" id="mail" name="user_mail">
        </div>
        <div>
            <label for="password">Password</label>
            <input type="password" id="password" name="user_password">
        </div>

        <div>
            <label for="reenter-password">Re-enter Password</label>
            <input type="password" id="reenter-password" name="user_repassword">
        </div>

        <div>
            <label class="label" for="First Name">First Name</label>
            <input type="text" id="firstname" name="user_firstname">
        </div>
        <div>
            <label class="label" for="Last Name">Last Name</label>
            <input type="text" id="lastname" name="user_lastname">
        </div>
        <div>
            <label class="label" for="Address">Address</label>
            <input type="text" id="address" name="user_address">
        </div>

        <div>
            <input type="submit" id="submit" value="Register"
                   onclick="return validateRegistration();">
        </div>
    </form>
</div>

<script lang="Javascript">
    function validateRegistration() {
        const email = document.getElementById("mail");
        const password = document.getElementById("password");
        const repassword = document.getElementById("reenter-password");
        const first = document.getElementById("user_firstname");
        const last = document.getElementById("user_lastname");
        const address = document.getElementById("user_address");

        if (email.value === "") {
            alert("Please enter an email.");
            return false;
        }
        if (password.value === "") {
            alert("Please enter a password.");
            return false;
        }
        if (password.value !== repassword.value) {
            alert("Your passwords do not match, please retry");
            return false;
        }

        const myform = document.getElementById("register-form");
        myform.submit();
        return true;
    }
</script>