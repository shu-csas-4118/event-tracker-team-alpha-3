<html>

<body class="text-center" data-gr-c-s-loaded="true">
    <form class="form-signin" action="/events/eventcreation" method="post">
        <h3>New Event</h3>
        <h5>{{error}}</h5>
        <div class="form-label-group">
            <label for="event_name">Title:</label>
            <input type="text" id="name" name="event_name" placeholder="name" class="form-control" required>
        </div>
        <div class="form-label-group">
            <label for="event_email">Email:</label>
            <input type="email" id="email" name="event_email" placeholder="email" class="form-control" required>
        </div>
        <div class="form-label-group">
            <label for="event_supervisor">Supervisor:</label>
            <input type="text" id="supervisor" name="event_supervisor" class="form-control" placeholder="supervisor" required>
        </div>
        <div class="form-label-group">
            <label for="event_address">Address:</label>
            <input type="text" id="address" name="event_address" class="form-control" placeholder="address">
        </div>
        <div class="form-label-group">
            <label for="event_start">Start Date:</label>
            <input type="date" id="startdate" name="event_start" class="form-control" placeholder="startdate">
        </div>

        <div class="form-label-group">
            <label for="event_end">End Date:</label>
            <input type="date" id="enddate" name="event_end" class="form-control" placeholder="enddate">
        </div>
        <div class="form-label-group">
            <label for="event_max">Max Registrants:</label>
            <input type="text" id="max" name="event_max" class="form-control" placeholder="max">
        </div>
        <div class="form-label-group">
            <label for="event_comments">Comments:</label>
            <input type="text" id="comments" name="event_comments" class="form-control" placeholder="comments">
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit" id="submit" value="Register">
            Register
        </button>
    </form>
</body>

</html>
