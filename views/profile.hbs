<html lang="en">

  <head>
    <script>
    function printEvents() {
      event_names = '{{names}}';
      events = '{{account.events}}';
      if (events === '')
        document.write('<div class="event-proto">' + "<h6> No events </h6>" + "</div>");
      else {
        events = events.split(',');
        names = event_names.split(',');
        console.log(events);
        console.log(names);
        for (var i = 0; i < events.length; i++) {
          document.write('<a class="btn btn-lg btn-primary btn-block" href="/event/' +
                          events[i] + '">' + names[i] + '</a>');
        }
      }
    }
    </script>
  </head>

  <nav class="navbar navbar-expand-sm">
    <button class="navbar-toggler" type="button" data-toggle="collapse"
    data-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href='/'>Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/events">Events</a>
        </li>
      </ul>
    </div>
  </nav>

  <body>
    <div class="profile-info">
      <h4> First name: {{account.first}} </h4>
    </div>
    <div class="profile-info">
      <h4> Last name: {{account.last}} </h4>
    </div>
    <div class="profile-info">
      <h4> Email: {{account.username}} </h4>
    </div>
    <div class="profile-info">
      <h4> Address: {{account.address}} </h4>
    </div>
    <div class="profile-info">
      <h4> Events: </h4>
      <script>printEvents();</script>
    </div>
    <form class="form-signin" action="/account/logout" method="post">
      <button class="btn btn-lg btn-primary btn-block" type="submit">
        Logout
      </button>
    </form>
  </body>
</html>
